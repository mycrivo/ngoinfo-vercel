# ============================================
# NGOInfo Frontend - Environment Variables
# ============================================
# Copy this file to .env.local for local development
# Never commit actual secrets to version control
# See docs/DECISIONS_ADR.md (ADR-005) for ownership and rotation policy

# --------------------------------------------
# API Configuration
# --------------------------------------------
# Base URL for Railway backend services (ReqAgent + Copilot)
# Dev: https://reqagent-dev.railway.app
# Staging: https://reqagent-staging.railway.app
# Prod: https://reqagent-prod.railway.app
NEXT_PUBLIC_API_BASE_URL=https://reqagent-dev.railway.app

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT_MS=15000

# --------------------------------------------
# Site Configuration
# --------------------------------------------
# Public site URL (for canonical URLs, OG tags, etc.)
# Dev: http://localhost:3000
# Staging: https://ngoinfo-web-staging.vercel.app
# Prod: https://ngoinfo.org
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# --------------------------------------------
# Authentication (Future)
# --------------------------------------------
# Auth provider credentials - managed by Backend team
# Rotation: Quarterly
# AUTH_SECRET=placeholder-secret-min-32-chars
# NEXTAUTH_URL=http://localhost:3000
# OAUTH_CLIENT_ID=placeholder-client-id
# OAUTH_CLIENT_SECRET=placeholder-client-secret

# --------------------------------------------
# Observability & Monitoring
# --------------------------------------------
# Sentry DSN for error tracking (optional)
# Owner: Infrastructure team
# Rotation: Annual
# SENTRY_DSN=https://placeholder@sentry.io/123456
# SENTRY_ENVIRONMENT=development

# Vercel Analytics token (auto-injected in Vercel deployments)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=placeholder

# --------------------------------------------
# Feature Flags
# --------------------------------------------
# Enable Mock Service Worker for API mocking in development
USE_MSW=false

# Enable branding preview features
ENABLE_BRANDING_PREVIEW=false

# Enable debug logging
DEBUG_ENABLED=false

# Telemetry opt-out flag
TELEMETRY_ENABLED=true

# --------------------------------------------
# External Services (Backend-owned)
# --------------------------------------------
# OpenAI API key (server-side only, used by Railway backend)
# NOT used by frontend - documented for reference only
# Owner: Backend team
# Rotation: Quarterly
# OPENAI_API_KEY=sk-placeholder

# WordPress integration endpoint (if applicable)
# WP_REST_API_URL=https://wordpress.ngoinfo.org/wp-json
# WP_API_TOKEN=placeholder-token

# --------------------------------------------
# Development Tools
# --------------------------------------------
# Disable type checking during build (not recommended for prod)
# SKIP_TYPE_CHECK=false

# Disable ESLint during build (not recommended for prod)
# SKIP_LINT=false

# Enable verbose logging in development
# VERBOSE_LOGGING=false
